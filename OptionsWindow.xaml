<Window x:Class="ELRCRobTool.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Options" Width="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Options" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#FF212121" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10,0">
            <!-- Global Hotkeys (Now a Toggle Switch) -->
            <Grid VerticalAlignment="Center" Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Global Hotkeys" VerticalAlignment="Center" FontSize="14" Foreground="#FF212121" Grid.Column="0"/>
                <ToggleButton x:Name="GlobalHotkeysToggle" Click="ToggleGlobalHotkeys_Click" Style="{StaticResource MaterialDesignSwitchToggleButton}" Grid.Column="1"/>
            </Grid>

            <Separator Margin="0,15"/>

            <!-- Keybind Info (Always Visible) -->
            <TextBlock FontSize="12" Foreground="#FF424242" TextWrapping="Wrap" Margin="0,0,0,4">
                <Run FontWeight="Bold" Foreground="#FF212121">Keybind Reference:</Run><LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 1:</Run> Auto Lockpick<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 2:</Run> Auto Glass Cutting<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 3:</Run> Auto ATM Robbery<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 4:</Run> Auto Crowbar
            </TextBlock>
            <Separator Margin="0,15"/>

            <!-- Collapsible Debug & Performance Options -->
            <Expander Header="Debug &amp; Performance Options"
                      materialDesign:ElevationAssist.Elevation="Dp0"
                      BorderBrush="#FFCCCCCC"
                      BorderThickness="1">
                <StackPanel Margin="15">
                    <!-- Debug Mode (Now a Toggle Switch) -->
                    <Grid VerticalAlignment="Center" Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Enable Debug Mode" VerticalAlignment="Center" FontSize="14" Foreground="#FF212121" Grid.Column="0"/>
                        <ToggleButton x:Name="DebugModeToggle" Click="ToggleDebugMode_Click" Style="{StaticResource MaterialDesignSwitchToggleButton}" Grid.Column="1"/>
                    </Grid>
                    <TextBlock Text="Logs detailed info to ERLC_Debug_Log.txt." FontSize="11" Foreground="Gray" Margin="0,2,0,10"/>
                    <Separator Margin="0,15"/>

                    <!-- Wide Scan Area (Already a Toggle Switch) -->
                    <Grid VerticalAlignment="Center" Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Use Wide Scan Area:" VerticalAlignment="Center" FontSize="14" Foreground="#FF212121" Grid.Column="0"/>
                        <ToggleButton x:Name="WideScanToggle" Click="ToggleWideScan_Click" Style="{StaticResource MaterialDesignSwitchToggleButton}" Grid.Column="1"/>
                    </Grid>
                    <TextBlock Text="ON is more reliable against lag. OFF is more precise." FontSize="11" Foreground="Gray" Margin="0,2,0,10"/>
                    <Separator Margin="0,15"/>

                    <!-- Performance TextBoxes -->
                    <TextBox x:Name="LockpickDelayTextBox" materialDesign:HintAssist.Hint="Lockpick Scan Delay (ms)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,0" TextChanged="LockpickDelay_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox x:Name="LockpickReactionTextBox" materialDesign:HintAssist.Hint="Lockpick Reaction Time (ms)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15,0,0" TextChanged="LockpickReaction_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox x:Name="AtmDelayTextBox" materialDesign:HintAssist.Hint="ATM Scan Delay (ms)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15,0,0" TextChanged="AtmDelay_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <Button Grid.Row="2" Style="{StaticResource MaterialDesignRaisedButton}" Content="Close" Height="35" Margin="0,15,0,0" Click="Close_Click"/>
    </Grid>
</Window>