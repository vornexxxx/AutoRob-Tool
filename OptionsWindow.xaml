<Window x:Class="ELRCRobTool.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Options" Width="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Options" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#FF212121" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10,0">
            <!-- Global Hotkeys (Always Visible) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                <TextBlock Text="Global Hotkeys: " VerticalAlignment="Center" FontSize="14" Foreground="#FF212121"/>
                <TextBlock x:Name="GlobalHotkeysStatus" FontSize="16" FontWeight="Bold" Margin="5,0"/>
                <Button Content="Toggle" Click="ToggleGlobalHotkeys_Click" Margin="10,0,0,0" Padding="5,2" Background="#FF009688" Foreground="White" BorderBrush="#FF00796B"/>
            </StackPanel>

            <Separator Margin="0,15"/>

            <!-- Keybind Info (Always Visible) -->
            <TextBlock FontSize="12" Foreground="#FF424242" TextWrapping="Wrap" Margin="0,0,0,4">
                <Run FontWeight="Bold" Foreground="#FF212121">Keybind Reference:</Run><LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 1:</Run> Auto Lockpick<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 2:</Run> Auto Glass Cutting<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 3:</Run> Auto ATM Robbery<LineBreak/>
                • <Run FontWeight="SemiBold">CTRL + 4:</Run> Auto Crowbar
            </TextBlock>

            <Separator Margin="0,15"/>

            <!-- Collapsible Debug & Performance Options -->
            <Expander Header="Debug &amp; Performance Options"
                      materialDesign:ElevationAssist.Elevation="Dp0"
                      BorderBrush="#FFCCCCCC"
                      BorderThickness="1">
                <StackPanel Margin="15">
                    <!-- Debug Mode -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="Enable Debug Mode: " VerticalAlignment="Center" FontSize="14" Foreground="#FF212121"/>
                        <TextBlock x:Name="DebugModeStatus" FontSize="16" FontWeight="Bold" Margin="5,0"/>
                        <Button Content="Toggle" Click="ToggleDebugMode_Click" Margin="10,0,0,0" Padding="5,2" Background="#FF009688" Foreground="White" BorderBrush="#FF00796B"/>
                    </StackPanel>
                    <TextBlock Text="Logs detailed info to ERLC_Debug_Log.txt." FontSize="11" Foreground="Gray" Margin="0,2,0,10"/>

                    <Separator Margin="0,15"/>

                    <!-- Lockpick Scan Delay -->
                    <StackPanel Margin="0,5">
                        <TextBlock Text="Lockpick Scan Delay (ms):" VerticalAlignment="Center" FontSize="14" Foreground="#FF212121"/>
                        <TextBox x:Name="LockpickDelayTextBox" materialDesign:HintAssist.Hint="Default: 1" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,0" TextChanged="LockpickDelay_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="Lower is faster (e.g., 0 or 1). Higher is slower." FontSize="11" Foreground="Gray" TextAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Separator Margin="0,15"/>

                    <!-- ATM Scan Delay -->
                    <StackPanel Margin="0,5">
                        <TextBlock Text="ATM Scan Delay (ms):" VerticalAlignment="Center" FontSize="14" Foreground="#FF212121"/>
                        <TextBox x:Name="AtmDelayTextBox" materialDesign:HintAssist.Hint="Default: 20" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,0" TextChanged="AtmDelay_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="Lower is faster. Controls pause between pixel checks." FontSize="11" Foreground="Gray" TextAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </StackPanel>

        <Button Grid.Row="2" Style="{StaticResource MaterialDesignRaisedButton}" Content="Close" Height="35" Margin="0,15,0,0" Click="Close_Click" Background="#FF009688" Foreground="White"/>
    </Grid>
</Window>