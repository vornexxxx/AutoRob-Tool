<Window x:Class="ELRCRobTool.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="200" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Options" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#FF212121" Margin="0,0,0,10"/>

        <!-- Options Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Global Hotkeys: " VerticalAlignment="Center" FontSize="14" Foreground="#FF212121"/>
                <TextBlock x:Name="GlobalHotkeysStatus" Text="✖" FontSize="16" FontWeight="Bold" Foreground="Red" Margin="5,0"/>
                <Button Content="Toggle" Click="ToggleGlobalHotkeys_Click" Margin="10,0,0,0" Padding="5,2"
                        Background="#FF009688" Foreground="White" BorderBrush="#FF00796B"/>
            </StackPanel>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" Style="{StaticResource MaterialDesignRaisedButton}" 
                Content="Close" Height="35" Margin="0,10,0,0" 
                Click="Close_Click" Background="#FF009688" Foreground="White"/>
    </Grid>
</Window>
